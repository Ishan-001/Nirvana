<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".PrefActivity">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/container"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_marginBottom="10dp"
        app:layout_constraintBottom_toBottomOf="parent">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:background="@drawable/nav_back"
            android:orientation="horizontal"
            android:padding="8dp">

            <ImageButton
                android:layout_width="60dp"
                android:layout_height="50dp"
                android:id="@+id/home"
                android:background="@drawable/button_back_transparent"
                android:src="@drawable/ic_baseline_home_24" />

            <ImageButton
                android:layout_width="60dp"
                android:layout_height="50dp"
                android:id="@+id/vibes"
                android:background="@drawable/button_back_transparent"
                android:src="@drawable/my_vibes_ic" />

            <ImageView
                android:layout_width="80dp"
                android:layout_height="50dp" />

            <ImageButton
                android:layout_width="60dp"
                android:layout_height="50dp"
                android:id="@+id/playlists"
                android:background="@drawable/button_back_transparent"
                android:src="@drawable/my_playlists_ic" />

            <ImageButton
                android:layout_width="60dp"
                android:layout_height="50dp"
                android:id="@+id/profile"
                android:background="@drawable/button_back_transparent"
                android:src="@drawable/ic_user" />

        </LinearLayout>

        <ImageView
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_centerHorizontal="true"
            android:background="@drawable/blob_back"
            android:src="@drawable/blob" />

    </RelativeLayout>

</androidx.constraintlayout.widget.ConstraintLayout>